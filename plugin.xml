<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
	xmlns:android="http://schemas.android.com/apk/res/android"
	id="cordova-plugin-pl43scanner"
	version="0.0.2">
	<name>PL43Scanner</name>
	<description>
		This plugin allows PL43 to scan barcode
	</description>
	<license>MIT</license>
	<engines>
		<engine name="cordova" version=">=3.0.0" />
	</engines>  
	<js-module src="www/pl43scanner.js" name="PL43Scanner">
		<clobbers target="cordova.plugins.pl43scanner" />
	</js-module>
	<!-- android -->
	<platform name="android">
    <source-file src="src/android/com/sysmagic/plugins/pl43scanner/PL43Scanner.java" target-dir="src/com/sysmagic/plugins/pl43scanner" />

    <config-file target="res/xml/config.xml" parent="/*">
			<feature name="PL43Scanner">
				<param name="android-package" value="com.sysmagic.plugins.pl43scanner.PL43Scanner"/>
			</feature>
		</config-file>		
    <config-file target="AndroidManifest.xml" parent="/manifest/application">
			<activity
				android:name="com.sysmagic.mob.ScanActivity"
				android:configChanges="orientation|keyboardHidden"
				android:theme="@android:style/Theme.Translucent.NoTitleBar"
				android:windowSoftInputMode="stateAlwaysHidden"
				android:exported="false">
				<intent-filter>
					<action android:name="com.sysmagic.mob.SCAN" />
					<category android:name="android.intent.category.DEFAULT"/>
				</intent-filter>
			</activity>			
			<service android:name="com.sysmagic.mob.ScanService"></service>
    </config-file>
    <source-file src="src/android/scanner.jar" target-dir="libs"/>
    <source-file src="src/android/armeabi/libdevapi.so" target-dir="libs"/>
    <source-file src="src/android/armeabi/libSerialPort.so" target-dir="libs"/>
    <source-file src="src/android/armeabi-v7a/libdevapi.so" target-dir="libs"/>
    <source-file src="src/android/armeabi-v7a/libSerialPort.so" target-dir="libs"/>
	</platform>
</plugin>